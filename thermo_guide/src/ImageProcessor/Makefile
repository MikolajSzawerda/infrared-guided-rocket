PROCESSOR_LIBS = Processor.c
PROCESSOR_LIBS_OBJS = $(PROCESSOR_LIBS:.c=.o)

PROCESSOR_TEST_SRCS = app.c
PROCESSOR_TEST_OBJS = $(PROCESSOR_TEST_SRCS:.c=.o)

AR = ar

PROCESSOR_LIBRARY = libprocessor.a
PROCESSOR_TEST = processor_test

all: $(PROCESSOR_LIBRARY) $(PROCESSOR_TEST)

$(PROCESSOR_LIBRARY): $(PROCESSOR_LIBS_OBJS)
	$(AR) rcs $(PROCESSOR_LIBRARY) $(PROCESSOR_LIBS_OBJS)

$(PROCESSOR_TEST): $(PROCESSOR_TEST_OBJS)
	$(CC) -o $(PROCESSOR_TEST) $(PROCESSOR_TEST_OBJS) -L. -lprocessor

%.o: %.c
	$(CC) -c $< -o $@

clean:
	rm -f $(PROCESSOR_LIBS_OBJS) $(PROCESSOR_TEST_OBJS) $(PROCESSOR_LIBRARY) $(PROCESSOR_TEST)